{
    "scheming_version": 1,
    "dataset_type": "dataset",
    "about": "CKAN dataset schema customized for the UN HCR RIDL project",
    "about_url": "http://github.com/okfn/ckanext-unhcr",
    "dataset_fields": [
        {
            "field_name": "title",
            "form_placeholder": "eg. A descriptive title",
            "label": "Title",
            "preset": "title"
        },
        {
            "field_name": "name",
            "form_placeholder": "eg. my-dataset",
            "label": "URL",
            "preset": "dataset_slug"
        },
        {
            "field_name": "tag_string",
            "form_placeholder": "eg. economy, mental health, government",
            "label": "Tags",
            "preset": "tag_string_autocomplete"
        },
        {
            "field_name": "owner_org",
            "label": "Organization",
            "preset": "dataset_organization"
        },
        {
            "display_property": "foaf:homepage",
            "display_snippet": "link.html",
            "field_name": "url",
            "form_placeholder": "http://example.com/dataset.json",
            "label": "Source"
        },
        {
            "field_name": "source_organization",
            "help_text": "Which organization owns / collected the data",
            "label": "Source organization(s)",
            "required": true
        },
        {
            "field_name": "linked_datasets",
            "help_text": "Links to other RIDL datasets; user can pick one or many datasets that are related to this one",
            "label": "Linked Datasets",
            "preset": "multiple_select",
            "choices": []
        },
        {
            "field_name": "tags",
            "help_text": "Tags useful for searching for the datasets",
            "label": "Keywords",
            "preset": "multiple_select",
            "required": true,
            "choices": [
                {
                    "label": "WASH",
                    "value": "wash"
                },
                {
                    "label": "Protection",
                    "value": "protection"
                },
                {
                    "label": "Shelter",
                    "value": "shelter"
                },
                {
                    "label": "Health",
                    "value": "health"
                },
                {
                    "label": "Nutrition",
                    "value": "nutrition"
                },
                {
                    "label": "Food",
                    "value": "food"
                },
                {
                    "label": "Livelihoods",
                    "value": "livelihoods"
                },
                {
                    "label": "Camp Management",
                    "value": "camp_management"
                },
                {
                    "label": "Cross-Operational",
                    "value": "cross_operational"
                },
                {
                    "label": "Sectoral",
                    "value": "sectoral"
                }
            ]
        },
        {
            "field_name": "unit_of_measurement",
            "help_text": "Unit of measurement / observation for the dataset",
            "label": "Unit of measurement",
            "preset": "multiple_select",
            "required": true,
            "choices": [
                {
                    "label": "Individual",
                    "value": "individual"
                },
                {
                    "label": "Household",
                    "value": "household"
                },
                {
                    "label": "Institution",
                    "value": "institution"
                },
                {
                    "label": "Community/Camp/Village",
                    "value": "community_camp_village"
                },
                {
                    "label": "PPG",
                    "value": "ppg"
                },
                {
                    "label": "Admin Level 2",
                    "value": "admig_level_2"
                },
                {
                    "label": "Other",
                    "value": "other"
                }
            ]
        },
        {
            "field_name": "notes",
            "form_placeholder": "User-generated description of what the dataset is",
            "form_snippet": "markdown.html",
            "label": "Description",
            "required": true
        },
        {
            "field_name": "operational_purpose_of_data",
            "help_text": "Classification of the type of data contained in the file",
            "label": "Operational purpose of data",
            "preset": "multiple_select",
            "required": true,
            "choices": [
                {
                    "label": "Participatory assessments",
                    "value": "participatory_assessments"
                },
                {
                    "label": "Other Needs assessments",
                    "value": "other_needs_assessments"
                },
                {
                    "label": "IDP Profiling",
                    "value": "idp_profiling"
                },
                {
                    "label": "Socio-economic survey",
                    "value": "socio_economic_survey"
                },
                {
                    "label": "Programme monitoring",
                    "value": "programme_monitoring"
                },
                {
                    "label": "Population Data",
                    "value": "population_data"
                },
                {
                    "label": "Protection data",
                    "value": "protection_data"
                },
                {
                    "label": "Shape files",
                    "value": "shape_files"
                },
                {
                    "label": "Case management",
                    "value": "case_management"
                },
                {
                    "label": "Coordination data",
                    "value": "coordination_data"
                }
            ]
        },
        {
            "field_name": "hxl-ated",
            "help_text": "Indicates if the dataset has HXL hashtags",
            "label": "HXL-ated",
            "preset": "select",
            "choices": [
                {
                    "label": "No",
                    "value": false
                },
                {
                    "label": "Yes",
                    "value": true
                }
            ]
        },
        {
            "field_name": "raw_access_data_level",
            "help_text": "Indicates if the raw data is accessible to people who are not authorized to see private data in the DC",
            "label": "Raw Data Access Level",
            "preset": "select",
            "choices": [
                {
                    "label": "Private",
                    "value": "private"
                },
                {
                    "label": "Internally visible",
                    "value": "internally_visible"
                }
            ]
        },
        {
            "field_name": "process_status",
            "help_text": "Indicates the processing stage of the data. 'Raw' means that the data has not been cleaned since collection. 'In process' means that it is being cleaned. 'Final' means that the dataset is final and ready for use in analytical products",
            "label": "Dataset Process Status",
            "preset": "select",
            "required": true,
            "choices": [
                {
                    "label": "Raw",
                    "value": "raw"
                },
                {
                    "label": "In Process",
                    "value": "in_process"
                },
                {
                    "label": "Final",
                    "value": "final"
                }
            ]
        },
        {
            "field_name": "project_url",
            "help_text": "Website URL associated with this data project (if applicable)",
            "label": "Project URL"
        },
        {
            "field_name": "archive_status",
            "help_text": "Allows users to indicate if the dataset is active, archived or deleted",
            "label": "Archive status",
            "preset": "select",
            "required": true,
            "choices": [
                {
                    "label": "Active",
                    "value": "active"
                },
                {
                    "label": "Archived",
                    "value": "archived"
                },
                {
                    "label": "Deleted",
                    "value": "deleted"
                }
            ]
        },
        {
            "field_name": "identifiability",
            "help_text": "Indicates if personally identifiable data is contained in the dataset",
            "label": "Identifiability",
            "preset": "select",
            "required": true,
            "choices": [
                {
                    "label": "Anonymized",
                    "value": "anonymized"
                },
                {
                    "label": "Personally identifiable",
                    "value": "personally_identifiable"
                }
            ]
        },
        {
            "field_name": "admin_notes",
            "form_placeholder": "Internal notes about how the dataset has been cleaned or transformed",
            "form_snippet": "markdown.html",
            "label": "Admin Notes"
        },
        {
            "field_name": "file_attachments",
            "help_text": "Files associated with a dataset, such as analytical reports, PDFs, Word documents, etc.",
            "label": "File Attachments",
            "preset": "resource_url_upload"
        },
        {
            "field_name": "original_id",
            "help_text": "If the dataset already has an ID from the source org, DDI, etc...",
            "label": "Original ID"
        },
        {
            "field_name": "data_collection_technique",
            "label": "Data collection technique",
            "preset": "select",
            "required": true,
            "choices": [
                {
                    "label": "Interview",
                    "value": "interview"
                },
                {
                    "label": "Face-to-face interview",
                    "value": "face_to_face_interview"
                },
                {
                    "label": "Face-to-face interview: CAPI/CAMI",
                    "value": "face_to_face_interview_capi_cami"
                },
                {
                    "label": "Face-to-face interview: PAPI",
                    "value": "face_to_face_interview_papi"
                },
                {
                    "label": "Telephone interview",
                    "value": "telephone_interview"
                },
                {
                    "label": "Telephone interview: CATI",
                    "value": "telephone_interview_cati"
                },
                {
                    "label": "E-mail interview",
                    "value": "e_mail_interview"
                },
                {
                    "label": "Web-based interview",
                    "value": "web_based_interview"
                },
                {
                    "label": "Self-administered questionnaire",
                    "value": "self_administered_questionnaire"
                },
                {
                    "label": "Self-administered questionnaire: E-mail",
                    "value": "self_administered_questionnaire_e_mail"
                },
                {
                    "label": "Self-administered questionnaire: Paper",
                    "value": "self_administered_questionnaire_paper"
                },
                {
                    "label": "Self-administered questionnaire: SMS/MMS",
                    "value": "self_administered_questionnaire_sms_mms"
                },
                {
                    "label": "Self-administered questionnaire: Web-based",
                    "value": "self_administered_questionnaire_web_based"
                },
                {
                    "label": "Self-administered questionnaire: Computer-assisted (CASI)",
                    "value": "self_administered_questionnaire_computer_assisted_casi"
                },
                {
                    "label": "Focus group",
                    "value": "focus_group"
                },
                {
                    "label": "Face-to-face focus group",
                    "value": "face_to_face_focus_group"
                },
                {
                    "label": "Telephone focus group",
                    "value": "telephone_focus_group"
                },
                {
                    "label": "Observation",
                    "value": "observation"
                },
                {
                    "label": "Other",
                    "value": "other"
                }
            ]
        },
        {
            "field_name": "license_id",
            "form_snippet": "license.html",
            "help_text": "License definitions and additional information can be found at http://opendefinition.org/",
            "label": "License"
        }
    ],
    "resource_fields": [
        {
            "field_name": "url",
            "label": "URL",
            "preset": "resource_url_upload"
        },
        {
            "field_name": "name",
            "form_placeholder": "eg. January 2011 Gold Prices",
            "label": "Name"
        },
        {
            "field_name": "description",
            "form_placeholder": "Some useful notes about the data",
            "form_snippet": "markdown.html",
            "label": "Description"
        },
        {
            "field_name": "format",
            "label": "Format",
            "preset": "resource_format_autocomplete"
        }
    ],
    "scheming_version": 1
}
