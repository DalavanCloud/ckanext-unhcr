{
    "scheming_version": 1,
    "dataset_type": "dataset",
    "about": "CKAN dataset schema customized for the UN HCR RIDL project",
    "about_url": "http://github.com/okfn/ckanext-unhcr",
    "dataset_fields": [
        {
            "field_name": "title",
            "form_placeholder": "eg. A descriptive title",
            "label": "Title",
            "preset": "title"
        },
        {
            "field_name": "name",
            "form_placeholder": "eg. my-dataset",
            "label": "URL",
            "preset": "dataset_slug"
        },
        {
            "field_name": "notes",
            "form_placeholder": "eg. Some useful notes about the data",
            "form_snippet": "markdown.html",
            "label": "Description"
        },
        {
            "field_name": "tag_string",
            "form_placeholder": "eg. economy, mental health, government",
            "label": "Tags",
            "preset": "tag_string_autocomplete"
        },
        {
            "field_name": "license_id",
            "form_snippet": "license.html",
            "help_text": "License definitions and additional information can be found at http://opendefinition.org/",
            "label": "License"
        },
        {
            "field_name": "owner_org",
            "label": "Organization",
            "preset": "dataset_organization"
        },
        {
            "display_property": "foaf:homepage",
            "display_snippet": "link.html",
            "field_name": "url",
            "form_placeholder": "http://example.com/dataset.json",
            "label": "Source"
        },
        {
            "field_name": "process_status",
            "help_text": "Indicates the processing stage of the data. 'Raw' means that the data has not been cleaned since collection. 'In process' means that it is being cleaned. 'Final' means that the dataset is final and ready for use in analytical products",
            "label": "Dataset Process Status",
            "preset": "select",
            "choices": [
                {
                    "label": "Raw",
                    "value": "raw"
                },
                {
                    "label": "In Process",
                    "value": "in_process"
                },
                {
                    "label": "Final",
                    "value": "final"
                }
            ]
        }
    ],
    "dataset_type": "dataset",
    "resource_fields": [
        {
            "field_name": "url",
            "label": "URL",
            "preset": "resource_url_upload"
        },
        {
            "field_name": "name",
            "form_placeholder": "eg. January 2011 Gold Prices",
            "label": "Name"
        },
        {
            "field_name": "description",
            "form_placeholder": "Some useful notes about the data",
            "form_snippet": "markdown.html",
            "label": "Description"
        },
        {
            "field_name": "format",
            "label": "Format",
            "preset": "resource_format_autocomplete"
        }
    ],
    "scheming_version": 1
}
